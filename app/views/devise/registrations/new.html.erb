<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="flex items-center min-h-screen bg-white dark:bg-gray-900">
    <div class="container mx-auto">
        <div class="max-w-md mx-auto my-10">
            <div class="text-center">
                <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">Регистрация</h1>
            </div>
            <div class="m-7">
                <form action="">
                    <div class="mb-6">
                        <label for="email" class="block mb-2 text-sm text-gray-600 dark:text-gray-400"><%= f.label :email %></label>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500"  %>
                    </div>
                    <div class="mb-6">
                        <div class="flex justify-between mb-2">
                            <label for="password" class="text-sm text-gray-600 dark:text-gray-400"><%= f.label :password %><br /></label>
                        </div>
                        <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
                    </div>
                    <div class="mb-6">
                        <label for="password" class="block mb-2 text-sm text-gray-600 dark:text-gray-400"><%= f.label :password_confirmation %></label>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" %>
                    </div>
                    <div class="mb-6">
                        <%= f.submit "Зарегистрироваться", class: 'w-full px-3 py-4 text-white bg-indigo-500 rounded-md focus:ring-4 focus:outline-none focus:ring-blue-300', data: { turbo: false }%>
                    </div>
                    <p class="text-sm text-center text-gray-400">Уже зарегистрированы? <a href="/users/sign_in" class="text-indigo-400 focus:outline-none focus:underline focus:text-indigo-500 dark:focus:border-indigo-800">Войти</a>.</p>
                </form>
            </div>
        </div>
    </div>
</div>
<% end %>
