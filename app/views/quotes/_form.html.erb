<%= simple_form_for quote, html: { class: "quote form" } do |f| %>
  <% if quote.errors.any? %>
    <div class="error-message">
      <%= quote.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>
  <div class="flex justify-center">
    <div class="flex w-96 ">
      <%= f.input :name, input_html: { autofocus: true } %>
      <%= f.submit class: "text-white
                    bg-gradient-to-r
                    from-purple-500 via-purple-600
                    to-purple-700 hover:bg-gradient-to-br
                    focus:ring-4 focus:outline-none
                    focus:ring-purple-300
                    dark:focus:ring-purple-800 shadow-lg
                    shadow-purple-500/50 dark:shadow-lg dark:shadow-purple-800/80
                    font-medium rounded-lg text-sm px-5 py-2.5 text-center mr-2 mb-2
                    cursor-pointer
                    " %>
    </div>
  </div>
<% end %>
